{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "web-build",
  "framework": "react-router",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/((?!api/.*).*)",
      "dest": "/index.html"
    },
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/(.+\\.(?:png|jpg|ico|css|mp3|js|gif)(?:\\?.*)?$)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}